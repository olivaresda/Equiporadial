    <script>
        // Estado de reproducción (placeholder). 
        // En una app real, esto estaría ligado a un objeto Audio().
        let isPlaying = false;
        
        /**
         * Alterna el estado de Play/Pause y actualiza la UI del botón.
         */
        function togglePlay() {
            const playIcon = document.getElementById('playIcon');
            const pauseIcon = document.getElementById('pauseIcon');
            
            if (isPlaying) {
                // Lógica para PAUSAR
                playIcon.classList.remove('hidden');
                pauseIcon.classList.add('hidden');
                console.log('Audio pausado');
                // Ejemplo: audioElement.pause();
            } else {
                // Lógica para REPRODUCIR
                playIcon.classList.add('hidden');
                pauseIcon.classList.remove('hidden');
                console.log('Audio reproduciendo');
                // Ejemplo: audioElement.play();
            }
            // Invertir el estado
            isPlaying = !isPlaying;
        }

        /**
         * Ajusta el volumen (placeholder).
         * @param {number} value - El valor del slider (0-100)
         */
        function setVolume(value) {
            console.log('Volumen ajustado a:', value);
            // En una app real:
            // const volumeLevel = value / 100;
            // audioElement.volume = volumeLevel;
        }
    </script>
    
